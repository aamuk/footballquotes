<%- include('partials/head') %>

<div class="container mx-auto px-20 pt-3 mt-5">
    <div class="container-sm mx-auto">
        <% data.forEach(entry => { %>
            <div class="mt-6 text-xl text-center text-gray-900">"<%= entry.quote %>"</div>
            <div class="mt-2 text-center">
                <a href="/author/<%= entry.author_id %>" class="text-l font-medium text-gray-900"><%= entry.fname %> <%= entry.lname %></a>
            </div>
            <% if(entry.image) { %>
                <div class="flex justify-center items-center pt-4 pb-6">
                    <img class="resize rounded-full w-24 h-24" src="/images/authors/<%= entry.image %>" alt="Author Image">
                </div>
            <% } %>
        <% }) %>





        <div class="py-10">
            <% if(page > 1) { %> <a href="/?page=<%=page-1%>">Previous</a> <% } %>
            <% for(let i = iterator; i <= endingLink; i++) { %>
                <% if(i === page) { %>
                <a class="font-bold" href="/?page=<%=i%>"><%=i%></a>
                <% continue; %>
            <% } %>
                <a href="/?page=<%=i%>"><%=i%></a>
                <% } %>
                <% if(page < numberOfPages) { %> <a href="/?page=<%=page+1%>">Next</a> <% } %>
        </div>
    </div>
</div>

<%- include('partials/foot') %>
