<%- include('partials/head') %>

<div class="container mx-auto px-20 pt-3 mt-5">
			

	<% data.forEach(entry => { %>
        <p class="mt-6 text-gray-900"><%= entry.quote %></p>
        <p class="mt-2">
            <a href="/author/<%= entry.author_id %>" class="text-xl font-medium text-gray-900 dark:text-blue-300"><%= entry.fname %> <%= entry.lname %></a>
        </p>
    <% }) %>

    <div class="py-10">
        <% if(page > 1) { %> <a href="/?page=<%=page-1%>">Previous</a> <% } %>
        <% for(let i = iterator; i <= endingLink; i++) { %>
            <% if(i === page) { %>
            <a class="font-bold" href="/?page=<%=i%>"><%=i%></a>
            <% continue; %>
        <% } %>
            <a href="/?page=<%=i%>"><%=i%></a>
            <% } %>
            <% if(page < numberOfPages) { %> <a href="/?page=<%=page+1%>">Next</a> <% } %>
    </div>

</div>

<%- include('partials/foot') %>
